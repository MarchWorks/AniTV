{
  "name": "AniTV",
  "productName": "AniTV",
  "version": "1.0.0",
  "main": "main/index.js",
  "scripts": {
    "dev": "electron .",
    "build": "yarn build-renderer && yarn build-app",
    "build-app": "build",
    "build-renderer": "cross-env NODE_ENV=production next build renderer && next export renderer",
    "dist": "npm run build && build --dir",
    "lint": "eslint --fix --ignore-path .gitignore --ext jsx,js ."
  },
  "build": {
    "asar": false,
    "extraResources": [
      {
        "from": "renderer/out",
        "to": "app/renderer"
      }
    ]
  },
  "author": "MarchWorks<edel.f.wool@gmail.com>",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "electron": "^4.1.0",
    "electron-builder": "^20.39.0",
    "eslint": "^5.13.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^5.0.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^2.4.1",
    "next": "^8.1.0",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "dependencies": {
    "electron-is-dev": "^1.0.1",
    "electron-next": "^3.1.5",
    "electron-store": "^3.2.0",
    "fs-extra": "^8.0.1",
    "fuzzball": "^1.2.2",
    "puppeteer": "^1.16.0",
    "webtorrent": "^0.103.1"
  }
}
